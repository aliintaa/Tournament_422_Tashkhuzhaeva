<Page x:Class="Tournament_422_Tashkhuzhaeva.CreateTourmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tournament_422_Tashkhuzhaeva"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateTourmentPage">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Создание турнира" FontSize="24" Margin="10"/>
            <TextBlock Text="Название турнира:"/>
            <TextBox Width="300"/>
            <TextBlock Text="Дата начала:"/>
            <DatePicker Width="200"/>
            <TextBlock Text="Время начала:"/>
            <TextBlock Text="Игра:"/>
            <TextBox Width="300"/>
            <TextBlock Text="Формат (например, 1x1, 5x5):"/>
            <TextBox Width="100"/>
            <TextBlock Text="Количество участников:"/>
            <TextBox Width="100"/>
            <TextBlock Text="Призовой фонд:"/>
            <TextBox Width="100"/>
            <TextBlock Text="Дополнительные условия:" Margin="0,10,0,0"/>
            <TextBox Width="300" Height="100" AcceptsReturn="True"/>
            <Button Content="Создать турнир" Click="CreateTournamentButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
