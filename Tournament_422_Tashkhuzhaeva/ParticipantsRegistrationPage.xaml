<Page x:Class="Tournament_422_Tashkhuzhaeva.ParticipantsRegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tournament_422_Tashkhuzhaeva"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ParticipantsRegistrationPage">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock HorizontalAlignment="Center" FontSize="20">Регистрация участников</TextBlock>
            <TextBlock Text="Выберите турнир:"/>
            <ComboBox x:Name="TournamentComboBox" Width="200"/>
            <TextBlock Text="Состав команды:"/>
            <TextBox Width="200"/>
            <TextBlock Text="Предпочитаемые роли:"/>
            <TextBox Width="200"/>
            <Button Content="Отправить заявку" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
