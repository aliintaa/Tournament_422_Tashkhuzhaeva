<Page x:Class="Tournament_422_Tashkhuzhaeva.MarhchSchedulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tournament_422_Tashkhuzhaeva"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MarhchSchedulePage">

    <Grid>
        <StackPanel>
            <TextBlock Text="Расписание матчей" FontSize="24" Margin="10"/>
            <ListView Name="MatchScheduleListView" Margin="10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Дата и время" Width="150"/>
                        <GridViewColumn Header="Команды" Width="200"/>
                        <GridViewColumn Header="Статус" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Page>
