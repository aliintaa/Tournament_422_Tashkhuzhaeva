<Page x:Class="Tournament_422_Tashkhuzhaeva.MatchResiltPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tournament_422_Tashkhuzhaeva"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MatchResiltPage">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Внесение результатов матчей" FontSize="24" Margin="10"/>
            <TextBlock Text="Выберите матч:"/>
            <ComboBox Name="MatchComboBox" Width="300"/>

            <TextBlock Text="Счет:"/>
            <TextBox Width="100"/>

            <TextBlock Text="Количество убийств:"/>
            <TextBox Width="100"/>

            <Button Content="Сохранить результаты" Click="SaveResultsButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
